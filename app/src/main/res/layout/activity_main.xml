<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.classicalmusicquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/name_edit_text"
            style="@style/nameTextField"
            android:hint="@string/name_edit_text" />

        <TextView
            style="@style/inviteText"
            android:text="@string/invitation" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark"></View>

        <TextView
            style="@style/questions"
            android:text="@string/question_1" />


        <EditText
            android:id="@+id/answer_1_edit_text"
            style="@style/nameTextField"
            android:hint="@string/answer_1_edit_text" />


        <TextView
            style="@style/questions"
            android:text="@string/question_2" />


        <CheckBox
            android:id="@+id/answer_2_1"
            style="@style/answers"
            android:text="@string/answer_2_1" />

        <CheckBox
            android:id="@+id/answer_2_2"
            style="@style/answers"
            android:text="@string/answer_2_2" />

        <CheckBox
            android:id="@+id/answer_2_3"
            style="@style/answers"
            android:text="@string/answer_2_3" />

        <CheckBox
            android:id="@+id/answer_2_4"
            style="@style/answers"
            android:text="@string/answer_2_4" />


        <TextView
            style="@style/questions"
            android:text="@string/question_3" />

        <RadioGroup
            android:id="@+id/group_question_3"
            style="@style/answer_groups">

            <RadioButton
                android:id="@+id/answer_3_1"
                style="@style/answers"
                android:text="@string/answer_3_1" />

            <RadioButton
                android:id="@+id/answer_3_2"
                style="@style/answers"
                android:text="@string/answer_3_2" />

            <RadioButton
                android:id="@+id/answer_3_3"
                style="@style/answers"
                android:text="@string/answer_3_3" />

            <RadioButton
                android:id="@+id/answer_3_4"
                style="@style/answers"
                android:text="@string/answer_3_4" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/question_4" />

        <RadioGroup
            android:id="@+id/group_question_4"
            style="@style/answer_groups">

            <RadioButton
                android:id="@+id/answer_4_1"
                style="@style/answers"
                android:text="@string/answer_4_1" />

            <RadioButton
                android:id="@+id/answer_4_2"
                style="@style/answers"
                android:text="@string/answer_4_2" />

            <RadioButton
                android:id="@+id/answer_4_3"
                style="@style/answers"
                android:text="@string/answer_4_3" />

            <RadioButton
                android:id="@+id/answer_4_4"
                style="@style/answers"
                android:text="@string/answer_4_4" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/question_5" />

        <RadioGroup
            android:id="@+id/group_question_5"
            style="@style/answer_groups">

            <RadioButton
                android:id="@+id/answer_5_1"
                style="@style/answers"
                android:text="@string/answer_5_1" />

            <RadioButton
                android:id="@+id/answer_5_2"
                style="@style/answers"
                android:text="@string/answer_5_2" />

            <RadioButton
                android:id="@+id/answer_5_3"
                style="@style/answers"
                android:text="@string/answer_5_3" />

            <RadioButton
                android:id="@+id/answer_5_4"
                style="@style/answers"
                android:text="@string/answer_5_4" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/question_6" />

        <RadioGroup
            android:id="@+id/group_question_6"
            style="@style/answer_groups">

            <RadioButton
                android:id="@+id/answer_6_1"
                style="@style/answers"
                android:text="@string/answer_6_1" />

            <RadioButton
                android:id="@+id/answer_6_2"
                style="@style/answers"
                android:text="@string/answer_6_2" />

            <RadioButton
                android:id="@+id/answer_6_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_6_3"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/answer_6_4"
                style="@style/answers"
                android:text="@string/answer_6_4" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/question_7" />

        <RadioGroup
            android:id="@+id/group_question_7"
            style="@style/answer_groups">

            <RadioButton
                android:id="@+id/answer_7_1"
                style="@style/answers"
                android:text="@string/answer_7_1" />

            <RadioButton
                android:id="@+id/answer_7_2"
                style="@style/answers"
                android:text="@string/answer_7_2" />

            <RadioButton
                android:id="@+id/answer_7_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_7_3"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/answer_7_4"
                style="@style/answers"
                android:text="@string/answer_7_4" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/question_8" />

        <RadioGroup
            android:id="@+id/group_question_8"
            style="@style/answer_groups">

            <RadioButton
                android:id="@+id/answer_8_1"
                style="@style/answers"
                android:text="@string/answer_8_1" />

            <RadioButton
                android:id="@+id/answer_8_2"
                style="@style/answers"
                android:text="@string/answer_8_2" />

            <RadioButton
                android:id="@+id/answer_8_3"
                style="@style/answers"
                android:text="@string/answer_8_3" />

            <RadioButton
                android:id="@+id/answer_8_4"
                style="@style/answers"
                android:text="@string/answer_8_4" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/question_9" />

        <RadioGroup
            android:id="@+id/group_question_9"
            style="@style/answer_groups">

            <RadioButton
                android:id="@+id/answer_9_1"
                style="@style/answers"
                android:text="@string/answer_9_1" />

            <RadioButton
                android:id="@+id/answer_9_2"
                style="@style/answers"
                android:text="@string/answer_9_2" />

            <RadioButton
                android:id="@+id/answer_9_3"
                style="@style/answers"
                android:text="@string/answer_9_3" />

            <RadioButton
                android:id="@+id/answer_9_4"
                style="@style/answers"
                android:text="@string/answer_9_4" />

        </RadioGroup>

        <TextView
            style="@style/questions"
            android:text="@string/question_10" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/quiz10_img"
            android:src="@drawable/quiz10" />

        <RadioGroup
            android:id="@+id/group_question_10"
            style="@style/answer_groups"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/answer_10_1"
                style="@style/answers"
                android:text="@string/answer_10_1" />

            <RadioButton
                android:id="@+id/answer_10_2"
                style="@style/answers"
                android:text="@string/answer_10_2" />

            <RadioButton
                android:id="@+id/answer_10_3"
                style="@style/answers"
                android:text="@string/answer_10_3" />

            <RadioButton
                android:id="@+id/answer_10_4"
                style="@style/answers"
                android:text="@string/answer_10_4" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_finish"
            style="@style/buttons"
            android:onClick="finishQuiz"
            android:text="@string/btn_finish" />

        <Button
            android:id="@+id/btn_reset"
            style="@style/buttons"
            android:onClick="resetQuiz"
            android:text="@string/btn_reset" />

    </LinearLayout>

</ScrollView>
